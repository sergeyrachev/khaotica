# Makefile for Flavor samples - C++

# Directories to build
COMPONENTS = \
	basic \
	gifprint \
	gif87a \
	polytest \
	maptest \
	audio \
	mpeg1ss \
	mpeg1vs \
	mpeg1as

all:
	for dir in $(COMPONENTS); do (cd $$dir; $(MAKE) all); done

clean:
	for dir in $(COMPONENTS); do (cd $$dir; $(MAKE) clean); done

