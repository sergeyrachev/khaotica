# Parameters
prefix  = @prefix@
bindir  = $(prefix)/bin
jlibdir = $(prefix)/lib/java
fldir   = $(prefix)/samples/fl
datadir = $(prefix)/samples/data

SRC     = .

CLASSES = \
	Main.class \
	ColorEntry.class \
	ColorMap.class \
	ExtensionBlock.class \
	GIF87a.class \
	ImageData.class \
	ImageDescriptor.class \
	ScreenDescriptor.class

JAVAFILES = \
 	ColorEntry.java \
	ColorMap.java \
	ExtensionBlock.java \
	GIF87a.java \
	ImageData.java \
	ImageDescriptor.java \
	ScreenDescriptor.java

TARGET = gif87a


all: 
	$(bindir)/flavorc -gj -x $(fldir)/$(TARGET).fl
	javac -classpath .:$(jlibdir) -d $(SRC) Main.java $(JAVAFILES)

clean:
	rm -rf $(CLASSES) $(JAVAFILES) *.bs *.xml $(TARGET)

run:
	java -classpath .:$(jlibdir) $(TARGET).Main $(datadir)/low.gif




