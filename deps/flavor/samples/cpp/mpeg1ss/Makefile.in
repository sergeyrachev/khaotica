# Parameters
prefix  = @prefix@
bindir  = $(prefix)/bin
clibdir = $(prefix)/lib/cpp
incdir  = $(prefix)/include
fldir   = $(prefix)/samples/fl
datadir = $(prefix)/samples/data

CXX      = @CXX@
CPPFLAGS = @DEFS@ 
CFLAGS   = -g -c


# Dependencies

all: mpeg1ss

mpeg1ss: mpeg1ss.h mpeg1ss.o main.o
	$(CXX) -o $@ main.o mpeg1ss.o -L$(clibdir) -lflavor

mpeg1ss.h mpeg1ss.cpp: 
	$(bindir)/flavorc -p -x $(fldir)/mpeg1ss.fl

clean:
	rm -f mpeg1ss.h mpeg1ss.cpp *.o *.bs *.xml mpeg1ss mpeg1ss.exe

.SUFFIXES: .o .c .cpp .h

.cpp.o:
	$(CXX) -o $@ $(CFLAGS) $(CPPFLAGS) -I$(incdir) $<

run:
	mpeg1ss $(datadir)/bu.mpg